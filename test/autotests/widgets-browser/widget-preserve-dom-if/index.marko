    <span ref="preserveBody" no-update-body-if(input.preserveCondition) data-renderId=input.renderId>${input.renderId}</span>

    <app-stateful-rerender ref="widget" name=(input.renderId.toString()) no-update-if(input.preserveCondition) />

    <!-- Test without an ID -->

    <span class="preserve" no-update-if(input.preserveCondition) data-renderId=input.renderId>${input.renderId}</span>

    <span class="preserve-body" no-update-body-if(input.preserveCondition) data-renderId=input.renderId>${input.renderId}</span>

    <app-stateful-rerender class="widget-no-id" name=(input.renderId.toString()) no-update-if(input.preserveCondition) data-renderId=input.renderId/>


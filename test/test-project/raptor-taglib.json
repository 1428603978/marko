{
    "namespace": ["test", "http://raptorjs.org/templates/test"],
    "tags": {
        "hello": "hello-tag.json",
        "simpleHello": {
            "renderer": "./simple-hello-tag.js",
            "attributes": {
                "name": "string",
                "adult": "boolean"
            }
        },
        "tabs": {
            "renderer": "./tabs-tag.js",
            "var": "tabs"
        },
        "tab": {
            "renderer": "./tab-tag.js",
            "import-var": {
                "target-property": "tabs",
                "expression": "tabs"
            },
            "attributes": {
                "title": "string"
            }
        },
        "dynamic-attributes": {
            "renderer": "./dynamic-attributes-tag.js",
            "attributes": {
                "test": "string",
                "*": {
                    "type": "string",
                    "target-property": "dynamicAttributes"
                }
            }
        },
        "dynamic-attributes2": {
            "renderer": "./dynamic-attributes-tag2.js",
            "attributes": {
                "test": "string",
                "*": "string"
            }
        },
        "dynamic-attributes3": {
            "renderer": "./dynamic-attributes-tag3.js",
            "attributes": {
                "test": "string",
                "*": {
                    "type": "string",
                    "target-property": null
                }
            }
        },
        "popover": {
            "renderer": "./popover-tag.js",
            "attributes": {
                "title": "string",
                "content": "string"
            }
        },
        "page-title": {
            "template": "./page-title-tag.rhtml",
            "attributes": {
                "title": "string"
            }
        },

        "default-attributes": {
            "renderer": "./default-attributes-tag.js",
            "attributes": {
                "prop1": "string",
                "prop2": "integer",
                "default1": {
                    "type": "string",
                    "default-value": "Default1"
                },
                "default2": {
                    "type": "integer",
                    "default-value": 100
                }
            }
        }
    }
}